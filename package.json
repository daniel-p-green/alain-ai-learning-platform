{
  "name": "leap-app",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "npm@10",
  "scripts": {
    "test:pure": "npm --prefix apps/backend run test:pure",
    "test:all": "npm --prefix apps/backend run test:all",
    "validate:lesson": "node scripts/validate-lesson.js",
    "render:lesson": "python3 scripts/json_to_notebook.py",
    "smoke:notebook": "python3 scripts/notebook_smoke.py",
    "dev:offline": "bash scripts/dev_offline.sh",
    "dev:hosted": "bash scripts/dev_hosted.sh",
    "smoke:hosted": "bash scripts/smoke/hosted.sh",
    "smoke:offline": "bash scripts/smoke/offline.sh",
    "test:web": "npm --prefix apps/web run test",
    "alain:build": "npm --prefix packages/alain-kit run build && npm --prefix packages/alain-kit-sdk run build",
    "alain:example": "npm --prefix packages/alain-kit-sdk run example",
    "alain:cli": "npm --prefix packages/alain-kit-sdk run cli",
    "alain:bench:run": "npm --prefix packages/alain-kit-sdk run bench:run",
    "alain:bench:analyze": "npm --prefix packages/alain-kit-sdk run bench:analyze",
    "docs:structure": "node scripts/generate-file-structure.mjs",
    "lint:prompts": "node scripts/check-prompts-sync.mjs",
    "tasks:sync": "node scripts/sync-tasks.mjs",
    "docs:sync": "node scripts/sync-docs.mjs",
    "repo:check": "node scripts/check-consistency.mjs"
  },
  "dependencies": {
    "motion": "^12.23.12",
    "openai": "^5.20.1",
    "yaml": "^2.8.1"
  }
}
