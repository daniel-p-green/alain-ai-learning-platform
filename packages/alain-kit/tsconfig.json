{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "isolatedModules": true
  },
  "include": [
    "core/**/*.ts",
    "validation/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
