{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://alain.dev/schemas/alain-lesson.schema.json",
  "title": "ALAIN Lesson Package v0.1",
  "type": "object",
  "required": ["title", "description", "steps"],
  "properties": {
    "title": { "type": "string", "maxLength": 200 },
    "description": { "type": "string", "maxLength": 2000 },
    "model": { "type": "string" },
    "provider": { "type": "string", "enum": ["poe", "openai-compatible"] },
    "difficulty": { "type": "string", "enum": ["beginner", "intermediate", "advanced"] },
    "tags": { "type": "array", "items": { "type": "string" } },
    "learning_objectives": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 8
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "maxItems": 7,
      "items": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "step_order": { "type": "integer", "minimum": 1 },
          "title": { "type": "string" },
          "content": { "type": "string", "maxLength": 4000 },
          "code_template": { "type": "string", "maxLength": 3000 },
          "expected_output": { "type": "string" },
          "model_params": { "type": ["object", "array", "string", "number", "boolean", "null"] }
        },
        "additionalProperties": false
      }
    },
    "assessments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question", "options", "correct_index"],
        "properties": {
          "question": { "type": "string" },
          "options": { "type": "array", "items": { "type": "string" }, "minItems": 2 },
          "correct_index": { "type": "integer", "minimum": 0 },
          "explanation": { "type": "string" },
          "difficulty": { "type": "string", "enum": ["beginner", "intermediate", "advanced"] },
          "tags": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    },
    "model_maker": {
      "type": "object",
      "required": ["name", "org_type"],
      "properties": {
        "name": { "type": "string" },
        "org_type": { "type": "string" },
        "homepage": { "type": "string" },
        "license": { "type": "string" },
        "repo": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}

